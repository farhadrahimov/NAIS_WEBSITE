<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="Описание вашего сайта">
    <meta name="keywords" content="ключевые, слова, для, сайта">
    <meta name="robots" content="index, follow">
    <title>@ViewData["Title"] - NAIS</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/contact.css" />
    <link rel="stylesheet" href="~/css/partners.css" />
    <link rel="stylesheet" href="~/css/swiper-bundle.min.css" />
    <script src="~/js/swiper-bundle.min.js"></script>
</head>
<body>
    <!-- Кнопка для мобильного меню -->
    <button class="menu-toggle">☰</button>

    <div class="container-fluid">
        <div class="sidebar">
            <div class="logo">
                <img src="~/files/photos/nais-logo.png" alt="NAIS Logo" />
            </div>
            <nav class="menu" aria-label="Main Navigation">
                <ul>
                    <li><a href="@Url.Action("Index", "Home")">Ana Səhifə</a></li>
                    <li><a href="@Url.Action("Contact", "Home")">Əlaqə</a></li>
                    <li><a href="@Url.Action("Services", "Home")">Xidmətlər</a></li>
                    <li><a href="@Url.Action("Calculating", "Home")">Hesablama</a></li>
                    <li><a href="@Url.Action("Partners", "Home")">Partnyorlar</a></li>
                    <li><a href="@Url.Action("AboutUs", "Home")">Haqqımızda</a></li>
                    <li><a href="@Url.Action("Catalog", "Home")">Kataloq</a></li>
                </ul>
            </nav>
            <div class="menu-footer">
                <div class="social-media">
                    <a href="#" aria-label="Facebook"><img src="~/files/photos/Facebook_logo.png" alt="Facebook" /></a>
                    <a href="#" aria-label="Instagram"><img src="~/files/photos/Instagram_logo.png" alt="Instagram" /></a>
                </div>
                <div class="languages">
                    <a href="#">AZ</a>
                    <a href="#">EN</a>
                    <a href="#">RU</a>
                </div>
                <div class="footer">
                    <p>Sayt hazırlanması Fafoo © 2024</p>
                </div>
            </div>
        </div>
        <div class="col-md-9 content">
            @RenderBody()
        </div>
    </div>

    <script>
        document.querySelector('.menu-toggle').addEventListener('click', function () {
            document.querySelector('.sidebar').classList.toggle('active');
        });
    </script>

</body>
</html>