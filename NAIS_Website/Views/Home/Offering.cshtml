@{
    ViewData["Title"] = "Offering";
    Layout = "_Layout";
}

<div class="contact-container">
    <h1>Qiymət təklifi al</h1>

    @if (ViewBag.Message != null)
    {
        <div class="alert alert-info">@ViewBag.Message</div>
    }

    <form asp-action="Offering" method="post">
        <div class="form-group">
            <label for="name">Ad, Soyad :</label>
            <input type="text" id="name" name="Name" class="form-control" required>
        </div>
        <div class="form-group">
            <label for="phone">Telefon :</label>
            <input type="tel" id="phone" name="PhoneNumber" class="form-control" required>
        </div>
        <div class="form-group">
            <label for="email">Email :</label>
            <input type="email" id="email" name="Email" class="form-control" required>
        </div>
        <div class="form-group">
            <label for="message">Qeydləriniz :</label>
            <textarea id="message" name="Message" class="form-control" maxlength="200" rows="5" required></textarea>
        </div>
        <button type="submit" class="btn btn-primary">Göndər</button>
    </form>
</div>